{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },

        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/neat-ai.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/quadtree_test.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "--test"
            ]
        }
        // Run unittest for test_quadtree
        {
            "name": "Python: Unittest",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "-v",
                "test_quadtree"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "envFile": "${workspaceFolder}/.venv",
            "console": "integratedTerminal"
        }
    ]
}